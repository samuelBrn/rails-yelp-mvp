<h2>Add a Review for <%= @restaurant.name %></h2>

<%= simple_form_for [@restaurant, Review.new] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rating, collection: 0..5, prompt: 'Choose a rating', label: 'Rating', required: true, hint: 'Rate the restaurant from 0 (worst) to 5 (best).' %>
    <%= f.input :content, as: :text, label: 'Review', required: true, hint: 'Write your review here.', input_html: { rows: 5 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit Review' %>
  </div>
<% end %>

<%= link_to 'Back to restaurant', restaurant_path(@restaurant) %>
